<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".CadastrarFragment">

    <TextView
        android:id="@+id/textoPergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual a pergunta ?"/>
    
    <EditText
        android:id="@+id/editPergunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/textoPergunta"
        android:layout_alignParentLeft="true"
        android:hint="Pergunta"/>

    <TextView
        android:id="@+id/textoResposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPergunta"
        android:text="Qual a Resposta ?"/>

    <EditText
        android:id="@+id/editResposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/textoResposta"
        android:layout_alignParentLeft="true"
        android:hint="Resposta"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        
        <Button
            android:id="@+id/botaoCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Cadastrar"
            android:textSize="18sp"
            android:layout_weight="1"/>
    
    <Button
        android:id="@+id/botaoJogar"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_marginLeft="15dp"
        android:text="Jogar"
        android:textSize="18sp"
        android:layout_weight="0"/>

    </LinearLayout>




</RelativeLayout>